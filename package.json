{
  "name": "openscad-web-customizer-forge",
  "version": "2.10.1",
  "description": "Web-based OpenSCAD customizer with client-side WASM rendering and developer toolchain",
  "type": "module",
  "bin": {
    "openscad-forge": "./bin/openscad-forge.js"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "setup-wasm": "node scripts/download-wasm.js",
    "setup-libraries": "node scripts/setup-libraries.js",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:e2e": "node scripts/run-e2e-safe.js",
    "test:e2e:ui": "node scripts/run-e2e-safe.js --ui",
    "test:e2e:headed": "node scripts/run-e2e-safe.js --headed",
    "test:e2e:debug": "node scripts/run-e2e-safe.js --debug",
    "test:e2e:direct": "playwright test",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test:run && npm run test:e2e",
    "check-a11y": "lighthouse http://localhost:5173 --only-categories=accessibility --quiet"
  },
  "keywords": [
    "openscad",
    "customizer",
    "3d-printing",
    "stl",
    "wasm"
  ],
  "author": "",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.57.0",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "eslint": "^8.55.0",
    "happy-dom": "^20.3.0",
    "jsdom": "^27.4.0",
    "prettier": "^3.1.1",
    "vite": "^5.0.0",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "jszip": "^3.10.1",
    "openscad-wasm-prebuilt": "^1.2.0",
    "split.js": "^1.6.5",
    "three": "^0.160.0",
    "yaml": "^2.8.2"
  }
}
